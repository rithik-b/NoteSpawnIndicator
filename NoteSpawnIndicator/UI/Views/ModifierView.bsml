<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<settings-container child-control-width='true' child-expand-width='true' size-delta-x='-8' size-delta-y='-6' spacing='1'>
		<increment-setting text='Mode' value='mode' apply-on-change='true' bind-value='true' min='0' max='2' integer-only='true' formatter='mode-formatter' />
		<toggle-setting text='Custom Image' value='custom-image' apply-on-change='true' bind-value='true' hover-hint='Use a custom image file located in Userdata\NoteSpawnIndicator.png' />
		<slider-setting text='X Offset' value='offset-x' min='-5' max='5' increment='0.1' apply-on-change='true' bind-value='true' show-buttons='true' />
		<slider-setting text='Y Offset' value='offset-y' min='-5' max='5' increment='0.1' apply-on-change='true' bind-value='true' show-buttons='true' />
		<slider-setting text='Z Offset' value='offset-z' min='-5' max='5' increment='0.1' apply-on-change='true' bind-value='true' show-buttons='true' />
		<slider-setting text='Scale' value='scale' min='0.01' max='5' increment='0.01' apply-on-change='true' bind-value='true' show-buttons='true' />
	</settings-container>
</bg>